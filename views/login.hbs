<form action="/users/login" method="POST" enctype="application/x-www-form-urlencoded">
    <label for="username">Username</label>
    <input type="text" class="username" id="username" placeholder="Enter username" required>
    <label for="password">Password</label>
    <input type="text" class="password" id="password" placeholder="Enter password" required>

    <input type="submit" class="submit_button" id="login_submit" value="login">
</form>