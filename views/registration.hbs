<form action="/users/register" method="POST" enctype="application/x-www-form-urlencoded">
    <label for="first_name">First Name</label>
    <input type="text" class="hover_card" id="first_name" name="first_name" placeholder="Enter first name" minlength="2" required>
    
    <label for="last_name">Last Name</label>
    <input type="text" class="hover_card" id="last_name" name="last_name" placeholder="Enter last name" minlength="2" required>
    
    <label for="address">Address</label>
    <input type="text" class="hover_card" id="address" name="address" placeholder="Enter address" required>
    
    <label for="email">Email</label>
    <input type="email" class="hover_card" id="email" name="email" placeholder="Enter valid e-mail address" required>

    <label for="username">Username</label>
    <input type="text" class="hover_card" id="username" name="username" placeholder="Enter username" required>

    <label for="password">Password</label>
    <input type="password" class="hover_card" id="password" name="password" placeholder="Enter password" required>
    
    <label for="confirm_password">Confirm Password</label>
    <input type="password" class="hover_card" id="confirm_password" name="confirm_password" placeholder="Enter confirm password" required>

    <input type="submit" class="hover_card"  id="registration_submit" value="Submit" required>
</form>